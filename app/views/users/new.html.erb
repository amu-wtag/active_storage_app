<div class="center">
    <h1>Signup</h1>
    <div>
        <%= form_with model: @user, url: users_create_path, method: :post, local: true do |f| %>
            <div>
                <%= f.label :name, "Name" %>
                <%= f.text_field :name %>
            </div>
            <div>
                <%= f.label :email, "Email" %>
                <%= f.email_field :email %>
            </div>
            <div>
                <%= f.label :password, "Password" %>
                <%= f.password_field :password %>
            </div>

            <div>
                <%= f.label :pic, "Profile Picture" %>
                <%= f.file_field :pic, accept: "image/*"%>
            </div>
            <div>
                <%= f.label :videos, "Videos" %>
                <%= f.file_field :videos, multiple: true, accept: "video/*" %>
            </div>
            <div>
                <%= f.submit "Submit", disable_with: 'Submiting...' %>
            </div>
        <% end %>
        
    </div>
</div>